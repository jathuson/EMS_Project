{
    "version": "0.2.0",
    "configurations": [
        


        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Unit Test",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "--pattern",
                "test*.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run Department Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_department.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
